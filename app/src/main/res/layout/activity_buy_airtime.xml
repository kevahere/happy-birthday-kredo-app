<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".BuyAirtime">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            tools:layout_editor_absoluteY="159dp" tools:layout_editor_absoluteX="149dp" android:id="@+id/editText"/>
    <TextView
            android:text="Airtime amount:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="174dp"
            tools:layout_editor_absoluteX="26dp" android:id="@+id/textView"/>
     <Button
            android:text="Purchase Airtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="241dp"
            tools:layout_editor_absoluteX="149dp" android:id="@+id/button2"/>
    <TextView
            android:text="Current Balance:"
            android:layout_width="111dp"
            android:layout_height="29dp" tools:layout_editor_absoluteY="94dp"
            tools:layout_editor_absoluteX="149dp" android:id="@+id/textView2"/>
</LinearLayout>