<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Kredo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.443"
            app:layout_constraintVertical_bias="0.276" android:id="@+id/textView3"/>
    <Button
            android:text="Kredo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="55dp" android:id="@+id/button" android:onClick="buyAirtime"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <Button
            android:text="Bundles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="315dp"
            tools:layout_editor_absoluteX="241dp" android:id="@+id/button3" android:onClick="buyBundles"/>

</LinearLayout>